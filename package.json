{
  "name": "knodia-monorepo",
  "private": true,
  "scripts": {
    "typecheck": "turbo run typecheck",
    "generate-api-client": "turbo run generate-api-client",
    "generate-openapi": "turbo run generate-openapi",
    "generate-protobuf": "turbo run generate-protobuf",
    "lint": "turbo run lint",
    "lint:autofix": "turbo run lint:autofix",
    "lint-openapi": "turbo run lint-openapi",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "knip": "turbo run build-knip-dependencies && knip",
    "infra:start": "./scripts/infra-start.sh",
    "infra:stop": "./scripts/infra-stop.sh",
    "infra:destroy": "./scripts/infra-destroy.sh",
    "prune-modules": "find . -name 'node_modules' -type d -exec rm -rf {} +"
  },
  "devDependencies": {
    "knip": "catalog:",
    "turbo": "catalog:"
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a",
  "engines": {
    "node": ">=24"
  }
}
